generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model admin {
  id        Int      @id @default(autoincrement())
  email     String
  password  String
  createdAt DateTime @default(now())
}

model category {
  id        Int        @id @default(autoincrement())
  name      String
  employees employee[]
}

model employee {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  password   String
  salary     Int
  address    String
  categoryId Int
  category   category @relation(fields: [categoryId], references: [id])
  image      String
}
